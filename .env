# ==================== 项目基础配置 ====================
PROJECT_NAME="服装定制AI平台"
VERSION="1.0.0"

# ==================== 数据库配置 ====================
# SQLite 配置（开发环境）
DATABASE_URL="sqlite:///./fashion_ai.db"

# PostgreSQL 配置（生产环境）
# DATABASE_URL="postgresql://user:password@localhost/fashion_ai"

# ==================== 文件上传配置 ====================
# 上传文件保存目录
UPLOAD_DIR="./uploads"

# 最大文件大小（单位：字节，10MB）
MAX_FILE_SIZE=10485760

# 允许的文件类型
ALLOWED_IMAGE_TYPES="image/jpeg,image/png"

# ==================== API 配置 ====================
# API 路由前缀
API_V1_STR="/api/v1"

# 服务器配置
HOST="0.0.0.0"
PORT=8000

# ==================== 安全配置 ====================
# 密钥（用于JWT等，生产环境务必修改）
SECRET_KEY="your-super-secret-key-here-change-in-production"

# CORS 允许的源
CORS_ORIGINS='["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:5173"]'

# ==================== 外部服务配置 ====================
# AI 服务配置（如使用通义千问等）
QIANWEN_API_KEY="your-qianwen-api-key"
QIANWEN_MODEL="qwen-plus"

# Redis 配置（用于Celery等）
REDIS_URL="redis://localhost:6379/0"

# ==================== 日志配置 ====================
LOG_LEVEL="INFO"
LOG_FILE="./logs/app.log"

# ==================== 环境模式 ====================
# 开发/测试/生产
ENVIRONMENT="development"
# ENVIRONMENT="production"

# ==================== 调试配置 ====================
# 开发环境开启调试模式
DEBUG=true

# 重新加载（开发环境）
RELOAD=true